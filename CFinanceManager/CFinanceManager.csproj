      <_ContentIncludedByDefault Remove="src\Application\obj\Application.csproj.nuget.dgspec.json" />
      <_ContentIncludedByDefault Remove="src\Application\obj\project.assets.json" />
      <_ContentIncludedByDefault Remove="src\Infrastructure\obj\Infrastructure.csproj.nuget.dgspec.json" />
      <_ContentIncludedByDefault Remove="src\Infrastructure\obj\project.assets.json" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Application\Application.csproj" />
      <ProjectReference Include="..\Infrastructure\Infrastructure.csproj" />
    </ItemGroup>

</Project>
